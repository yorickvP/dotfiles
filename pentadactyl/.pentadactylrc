" feedly:
group -description 'Feedly' -locations=feedly.com feedly
nmap -group feedly gm <Pass>
nmap -group feedly ga <Pass>
nmap -group feedly gg <Pass>
nmap -group feedly gl <Pass>

set passkeys+=feedly.com:"r/jknpv<S-j><S-m>mxs<S-v>"

